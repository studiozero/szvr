doctype
html
	head
		- var site = {title: 'We are Studio Zero | Immersive Web', url: 'http://www.studiozero.co', image: 'http://www.studiozero.co/assets/images/studiozero_og1200x1200.jpg', description: 'Studio Zero | Creative studio based in London, building Virtual, Augmented and Mixed reality experiences on the Web.' }
