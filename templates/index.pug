doctype
html
	head
		- var site = {title: 'We are Studio Zero | Immersive Web', url: 'http://www.studiozero.co', image: 'http://www.studiozero.co/assets/images/studiozero_og1200x1200.jpg', favicon: 'http://www.web-vr.xyz/assets/images/favicon.ico', description: 'We are Studio Zero | Immersive Web | VR | AR | MR | AI' }
		each val, key in site
			meta(property='og:' + '#{key}', content='#{val}')

		- var tCard = { description: 'We are Studio Zero | Immersive Web | VR | AR | MR | AI', title:'We are Studio Zero | Immersive Web', site: '@studiozeroco', card: 'summary', image: 'http://www.studiozero.co/assets/images/studiozero_og1200x1200.jpg'}

		each val, key in tCard
			meta(name='twitter:' + '#{key}', content='#{val}')

		title #{site.title}
		link(rel="stylesheet" href="/main.css")
		link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat")
		link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Hind:300,400,700")
		script(src="/assets/js/aframe-v0.4.0.min.js")
		script(src="/assets/js/main.js")
	body
		nav#navigation
			div.container
				svg.header-logo(viewbox='0 0 772.48 316.87')
					g
						path(d='M512,645.84L359.32,381.37H664.71Zm-141.56-258L512,633,653.58,387.8H370.45Z', transform='translate(-127.06 -328.97)')
						path(d='M899.54,593.45H594.15L746.85,329ZM605.28,587H888.41L746.85,341.82Z', transform='translate(-127.06 -328.97)')
						path(d='M432.45,593.45H127.06L279.76,329ZM138.19,587H421.32L279.76,341.82Z', transform='translate(-127.06 -328.97)')
				ul.nav-right
					li
						a(href="http://www.medium.com/studio-zero") Blog
		header.home-header
			a-scene(embedded)
				h1.intro Studio Zero
				a-assets
					img#grid(src="/assets/images/grid.png" crossorigin="anonymous")
					img#sky(src="/assets/images/chrome.jpg" crossorigin="anonymous")

				a-entity#logo(position="0 1.8 -8")
					a-entity#one(geometry="primitive: cylinder; height: 0.1; segmentsRadial: 3" scale="5 5 5" position="-7.5 1 -11.35" material="color: black" rotation="30 90 90")
					a-entity#two(geometry="primitive: cylinder; height: 0.1; segmentsRadial: 3" position="0 0.23 4" material="color: black" rotation="90 90 90")
					a-entity#three(geometry="primitive: cylinder; height: 0.1; segmentsRadial: 3" scale="2 2 2" position="3 0.3 0" material="color: black" rotation="30 90 90")

				a-entity(position="0 0 0" geometry="primitive: plane; width: 100; height: 100;" rotation="-90 0 0" material="src: #grid; repeat: 100 100; transparent: true;metalness:0; roughness: 0.4; sphericalEnvMap: #sky;")

				a-sky(src="#sky" rotation="0 -90 0")

				a-entity(light="type: ambient; color: white")

				a-entity#peep(position="0 0 -40" rotation="0 90 0")
					a-animation(attribute="position" dur="10000" fill="forwards" to="0 0 0")
					a-animation#camera-animation(attribute="rotation" delay="5000" dur="2000" fill="forwards" to="0 0 0")
					a-camera

		section.opening
			p.intro A creative studio building immersive products and experiences for the web.
			div.tech
				span VR
				span AR
				span MR
				span AI
			p.body Studio Zero is a small creative studio based in London and we're taking our combined knowledge of 30 years building for the web and bringing all of that to Virtual, Augmented and Mixed reality. We want to help everyone from Educators to storytellers, from big brands to small start ups create unique and unforgetable expiriences using the power of the web. Want to combine Virtual Reality with an Artifical Intelliegent chatbot running in the cloud? We can help you with that.

		section
			ul.work-list
				li.work-item
					a()
						img(src="/assets/images/soon.jpg")
				li.work-item
					a(href="https://medium.com/studio-zero/poster-vr-re-imagining-the-movie-poster-9440b252156d" title="Rogue One VR Poster")
						img(src="/assets/images/1.png")
				li.work-item
					a
						img(src="/assets/images/soon.jpg")


		section.clients
			ul
				li
					img(src="/assets/images/sa.png")
				li
					img(src="/assets/images/tabl.png")
				li
					img(src="/assets/images/tesco.png")
				li
					img(src="/assets/images/icl.png")
				li
					img(src="/assets/images/rbs.png")

		include footer.pug
